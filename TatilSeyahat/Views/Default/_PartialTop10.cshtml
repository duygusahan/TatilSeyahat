@model List<TatilSeyahat.Models.Siniflar.Blog>
<div class="padding">
    <h4>Haftanın En Popüler 10 Bloğu</h4>
    @{ int i = 0;} 
    @foreach (var item in Model)
    {
        <ul class="list list-pad">
            <li class="list-bg"><span>@{i++;}@i.</span><a href="/Blog/BlogDetay/@item.BlogId">@item.Baslik</a></li>

        </ul>
    }

    <a href="/Blog/Index/" class="link1">Tüm Blogları Gör</a>
</div>

@model List<TatilSeyahat.Models.Siniflar.Blog>
<div class="con-bot">
    @foreach (var item in Model)
    {
        <div class="left">
            <div class="bot-left">
                <img src="@item.ImgUrl" alt="" style="width:250px ; height:150px" />

            </div>
            <div class="left-text">
                <h4></h4>
                <span class="doller">@item.Tarih.ToShortDateString()</span>
                <p>@item.Baslik</p>
                <p><a href="">@item.Aciklama.Substring(0,100)...</a></p>
                <p><a href="/Blog/BlogDetay/@item.BlogId"><span class="read">Devamını Oku</span></a></p>
            </div>
        </div>
    }
    @Html.Action("_PartialHotels2" , "Default")
</div>

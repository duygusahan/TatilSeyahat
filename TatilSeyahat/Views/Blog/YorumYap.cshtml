@model TatilSeyahat.Models.Siniflar.Yorum
<div class="content-form">
    <h3>Bir Yorum Yapin</h3>
    
    <form method="post">
        <input type="hidden" placeholder="Id" name="Blogid" value="@ViewBag.deger"   required/>
        <input type="text" placeholder="Kullanici Adi" name="KullaniciAdi" required />
        <input type="text" placeholder="Mail Adresi" name="Mail" required />

        <textarea placeholder="Yorum" name="Yorumlar"></textarea>
        <input type="submit" value="Gonder" />
    </form>
</div>

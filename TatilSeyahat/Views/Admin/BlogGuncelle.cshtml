@model TatilSeyahat.Models.Siniflar.Blog
@{
    ViewBag.Title = "BlogGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm("BlogGuncelle", "Admin", FormMethod.Post))
{
    @Html.HiddenFor(m => m.BlogId)
    @Html.LabelFor(m => m.Baslik);
    @Html.TextBoxFor(m => m.Baslik, new { @class = "form-control" })
    <br />

    @Html.LabelFor(m => m.ImgUrl);
    @Html.TextBoxFor(m => m.ImgUrl, new { @class = "form-control" })
    <br />

    @Html.LabelFor(m => m.Tarih);
    @Html.TextBoxFor(m => m.Tarih, new { @class = "form-control" })
    <br />

    @Html.LabelFor(m => m.Aciklama);
    @Html.TextAreaFor(m => m.Aciklama, 15, 1, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Güncelle</button>
}


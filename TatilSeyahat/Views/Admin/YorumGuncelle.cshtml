@model TatilSeyahat.Models.Siniflar.Yorum
@{
    ViewBag.Title = "YorumGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm("YorumGuncelle", "Admin", FormMethod.Post))
{
    @Html.HiddenFor(m=>m.YorumId)
    @Html.LabelFor(m=>m.KullaniciAdi)
    @Html.TextBoxFor(m=>m.KullaniciAdi , new {@class="form-control" })
    <br />
    @Html.LabelFor(m=>m.Mail)
    @Html.TextBoxFor(m=>m.Mail , new {@class="form-control" })
    <br />
    @Html.LabelFor(m=>m.Yorumlar)
    @Html.TextAreaFor(m=>m.Yorumlar,15,1 , new {@class="form-control"})
    <br />
    <button class="btn btn-success">Güncelle</button>
}

